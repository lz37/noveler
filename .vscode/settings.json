{
	"nix.enableLanguageServer": true,
	"nix.serverPath": "nil",
	"nix.serverSettings": {
		"nil": {
			"formatting": {
				"command": ["nixpkgs-fmt"]
			},
			"nix": {
				"flake": {
					"autoArchive": true,
					"autoEvalInputs": true,
					"nixpkgsInputName": "nixpkgs"
				},
				"maxMemoryMB": 4096
			}
		}
	},
	"typescript.tsdk": "node_modules/typescript/lib",
	"rescript.settings.codeLens": true
}
