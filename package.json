{
  "name": "noveler",
  "description": "一个在 vscode 上辅助码中文小说的插件",
  "version": "0.6.1",
  "publisher": "zerozawa",
  "license": "GPL-3.0",
  "scripts": {
    "vscode:prepublish": "rm -r out && yarn compile && webpack --mode production",
    "compile": "npm-run-all compile:*",
    "compile:extension": "webpack --mode development --config webpack4ext.config.js",
    "compile:view": "webpack --mode development",
    "watch": "npm-run-all -p watch:*",
    "watch:extension": "webpack --watch --mode development --config webpack4ext.config.js",
    "watch:view": "webpack --watch --mode development",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/prettier": "^2.7.1",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/vscode": "^1.32.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "css-loader": "^6.7.1",
    "eslint": "^8.13.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "antd": "^4.23.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "engines": {
    "vscode": "^1.71.2"
  },
  "repository": {
    "url": "https://github.com/lz37/noveler"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:plaintext"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "noveler.preview",
        "title": "preview",
        "category": "noveler"
      }
    ],
    "keybindings": [
      {
        "command": "noveler.preview",
        "key": "alt+\\",
        "mac": "alt+\\",
        "when": "editorTextFocus && editorLangId == 'plaintext'"
      },
      {
        "command": "noveler.triggerSuggest.before",
        "key": "ctrl+space",
        "mac": "ctrl+space",
        "when": "editorTextFocus && editorLangId == 'plaintext'"
      }
    ],
    "colors": [
      {
        "id": "number",
        "description": "数字的颜色",
        "defaults": {
          "dark": "#6cd8e6",
          "light": "#00008b"
        }
      },
      {
        "id": "bookTitleMark",
        "description": "书名号的颜色",
        "defaults": {
          "dark": "#d3090a",
          "light": "#a83f3f"
        }
      },
      {
        "id": "quote",
        "description": "引号的颜色",
        "defaults": {
          "dark": "#90ee90",
          "light": "#006400"
        }
      },
      {
        "id": "squareBracket",
        "description": "方括号的颜色",
        "defaults": {
          "dark": "#edbefa",
          "light": "#8b008b"
        }
      }
    ],
    "configuration": {
      "title": "Noveler",
      "properties": {
        "noveler.showApplyRecommendPlaintextConf": {
          "type": "boolean",
          "default": true,
          "items": {
            "type": "boolean"
          },
          "markdownDescription": "是否显示 *应用推荐的 `plaintext` 配置* 的提示",
          "scope": "resource"
        },
        "noveler.autoIndentLines": {
          "type": "number",
          "default": 0,
          "markdownDescription": "回车后自动插入的行数",
          "scope": "resource"
        },
        "noveler.autoIndentSpaces": {
          "type": "number",
          "default": 4,
          "markdownDescription": "回车后自动插入的空格数",
          "scope": "resource"
        },
        "noveler.spaceBetweenChEn": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "格式化时是否中英文分隔",
          "scope": "resource"
        },
        "noveler.previewFontSize": {
          "type": "number",
          "default": 16,
          "markdownDescription": "预览窗口的字体大小",
          "scope": "resource"
        },
        "noveler.previewIndentionLength": {
          "type": "number",
          "default": 4,
          "markdownDescription": "预览窗口的缩进长度",
          "scope": "resource"
        },
        "noveler.previewSpaceLines": {
          "type": "number",
          "default": 1,
          "markdownDescription": "预览窗口的行高",
          "scope": "resource"
        },
        "noveler.statusShow": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "是否显示状态栏",
          "scope": "resource"
        },
        "noveler.statusTimeUnit": {
          "type": "number",
          "default": 10,
          "markdownDescription": "状态栏计数器的时间单位",
          "scope": "resource"
        },
        "noveler.customHighlight": {
          "type": "object",
          "markdownDescription": "自定义高亮，键为正则表达式，值为渲染选项，值的结构参照 [DecorationRenderOptions](https://code.visualstudio.com/api/references/vscode-api#DecorationRenderOptions)"
        },
        "noveler.confCSVFiles": {
          "type": "array",
          "markdownDescription": "高亮与补全的文件配置",
          "items": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string",
                "markdownDescription": "配置文件的路径，可以是绝对路径，也可以是相对于当前工作区的路径"
              },
              "key": {
                "type": "string",
                "markdownDescription": "指定配置文件中的主键名",
                "default": "name"
              },
              "hoverKey":{
                "type": "string",
                "markdownDescription": "指定配置文件中的键名，用于鼠标悬停时显示的内容"
              },
              "decorationRenderOptions": {
                "type": "object",
                "markdownDescription": "高亮配置，根据配置高亮对应的主键名属性，结构参照 [DecorationRenderOptions](https://code.visualstudio.com/api/references/vscode-api#DecorationRenderOptions)"
              }
            }
          }
        }
      }
    }
  }
}
