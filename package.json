{
	"name": "noveler",
	"version": "2.0.0",
	"type": "commonjs",
	"displayName": "Noveler",
	"description": "一个在 vscode 上辅助码中文小说的插件",
	"categories": [
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/lz37/noveler"
	},
	"author": "zerozawa",
	"publisher": "zerozawa",
	"license": "GPL-3.0-only",
	"packageManager": "pnpm@9.9.0+sha512.60c18acd138bff695d339be6ad13f7e936eea6745660d4cc4a776d5247c540d0edee1a563695c183a66eb917ef88f2b4feb1fc25f32a7adcadc7aaf3438e99c1",
	"engines": {
		"vscode": "^1.91.0"
	},
	"main": "dist/client/extension.js",
	"keywords": [
		"novel",
		"小说",
		"小説",
		"plaintext",
		"markdown"
	],
	"scripts": {
		"build": "run-s -l build:common build:language-server build:vscode-extension",
		"build:language-server": "cd ./projects/language-server && webpack",
		"build:vscode-extension": "cd ./projects/vscode-extension && webpack",
		"build:common": "cd ./projects/common && tsc",
		"dev": "run-s build:common dev-all",
		"dev-all": "run-p -l dev:*",
		"dev:language-server": "cd ./projects/language-server && webpack --watch",
		"dev:vscode-extension": "cd ./projects/vscode-extension && webpack --watch",
		"dev:common": "cd ./projects/common && tsc -w",
		"prepare": "husky"
	},
	"devDependencies": {
		"@cspell/cspell-types": "^8.16.0",
		"@cspell/dict-companies": "^3.1.7",
		"@cspell/dict-css": "^4.0.16",
		"@cspell/dict-en_us": "^4.3.27",
		"@cspell/dict-fonts": "^4.0.3",
		"@cspell/dict-html": "^4.0.10",
		"@cspell/dict-node": "^5.0.5",
		"@cspell/dict-npm": "^5.1.12",
		"@cspell/dict-typescript": "^3.1.11",
		"@cspell/eslint-plugin": "^8.16.0",
		"@eslint/js": "^9.14.0",
		"@ianvs/prettier-plugin-sort-imports": "^4.4.0",
		"@types/eslint-config-prettier": "^6.11.3",
		"@types/eslint__eslintrc": "^2.1.2",
		"@types/eslint__js": "^8.42.3",
		"@types/lint-staged": "^13.3.0",
		"@types/micromatch": "^4.0.9",
		"@types/node": "20.14.0",
		"@types/ramda": "^0.30.2",
		"@types/shebang-command": "^1.2.2",
		"@webpack-cli/generators": "^3.0.7",
		"crlf": "^1.1.1",
		"cspell": "^8.16.0",
		"eslint": "^9.14.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-functional": "^7.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"globals": "^15.12.0",
		"husky": "^9.1.6",
		"is-binary-path": "^3.0.0",
		"lint-staged": "^15.2.10",
		"micromatch": "^4.0.8",
		"npm-run-all2": "^6.2.6",
		"prettier": "^3.3.3",
		"prettier-plugin-css-order": "^2.1.2",
		"prettier-plugin-jsdoc": "^1.3.0",
		"prettier-plugin-pkg": "^0.18.1",
		"prettier-plugin-sort-json": "^4.0.0",
		"ramda": "^0.30.1",
		"shebang-command": "^2.0.0",
		"ts-loader": "^9.5.1",
		"typescript": "5.6.3",
		"typescript-eslint": "^8.14.0",
		"unplugin-parcel-macros": "^0.1.1",
		"webpack": "^5.96.1",
		"webpack-cli": "^5.1.4"
	},
	"activationEvents": [
		"onLanguage:plaintext",
		"onLanguage:markdown",
		"onStartupFinished"
	],
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"noveler.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"noveler.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"qna": "marketplace",
	"extensionKind": [
		"workspace"
	]
}
